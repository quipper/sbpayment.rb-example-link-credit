<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.token %></td>
        <td><%= order.ordered_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

